<a href="/movies" class="sing-movie">Go back</a>

<div class="movie">
  <img src="{{movie.image}}" alt="Movie Img" class="posters">
  <div class="info-display">
    <p class="title">{{movie.title}}</p>
    <p>Director: {{movie.director}}</p>
    <p>Stars</p>
    <ul>
      <li>{{movie.stars}}</li>
    </ul>
    <p>{{movie.description}}</p>
    <p>{{movie.showtimes}}</p>
  </div>
</div>